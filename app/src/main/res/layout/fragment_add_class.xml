<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidhuman.example.materialdrawer.fulloverlay.AddClassFragment"
    android:orientation="vertical"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/title_add_class"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:id="@+id/textView" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="강의명"
                        android:id="@+id/txtPeople" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/edtTitle"
                        android:width="200dp"
                        android:layout_alignBottom="@+id/txtPeople"
                        android:layout_alignLeft="@+id/btn_add_class"
                        android:layout_alignStart="@+id/btn_add_class" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수업내용"
                        android:id="@+id/textView3" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/edtContent"
                        android:layout_above="@+id/textView7"
                        android:layout_alignLeft="@+id/edtEndTime"
                        android:layout_alignStart="@+id/edtEndTime"
                        android:width="200dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수업날짜"
                        android:id="@+id/textView4" />

                    <DatePicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/datePicker"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner"
                        android:scaleX="0.3"
                        android:scaleY="0.3" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/edtDate"
                        android:layout_above="@+id/textView4"
                        android:layout_alignLeft="@+id/edtTitle"
                        android:layout_alignStart="@+id/edtTitle"
                        android:width="200dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수업시작시간"
                        android:id="@+id/textView5" />

                    <TimePicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/timePicker"
                        android:timePickerMode="spinner" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/edtStartTime"
                        android:layout_above="@+id/textView5"
                        android:layout_alignLeft="@+id/edtDate"
                        android:layout_alignStart="@+id/edtDate"
                        android:width="200dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수업종료시간"
                        android:id="@+id/textView6" />

                    <TimePicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/timePicker2"
                        android:timePickerMode="spinner" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/edtEndTime"
                        android:layout_alignBottom="@+id/textView5"
                        android:layout_alignLeft="@+id/edtStartTime"
                        android:layout_alignStart="@+id/edtStartTime"
                        android:width="200dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수업장소"
                        android:id="@+id/textView7" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/edtPlace"
                        android:layout_alignBottom="@+id/textView7"
                        android:layout_alignLeft="@+id/edtContent"
                        android:layout_alignStart="@+id/edtContent"
                        android:width="200dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="준비물"
                        android:id="@+id/textView16" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText3"
                        android:layout_alignBottom="@+id/textView16"
                        android:layout_alignLeft="@+id/edtContent"
                        android:layout_alignStart="@+id/edtContent"
                        android:width="200dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최소인원"
                        android:id="@+id/textView17" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText4"
                        android:layout_alignBottom="@+id/textView17"
                        android:layout_alignLeft="@+id/edtContent"
                        android:layout_alignStart="@+id/edtContent"
                        android:width="200dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최대인원"
                        android:id="@+id/textView18" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText5"
                        android:layout_alignBottom="@+id/textView18"
                        android:layout_alignLeft="@+id/edtContent"
                        android:layout_alignStart="@+id/edtContent"
                        android:width="200dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="계좌번호"
                        android:id="@+id/textView19" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText6"
                        android:layout_alignBottom="@+id/textView19"
                        android:layout_alignLeft="@+id/edtContent"
                        android:layout_alignStart="@+id/edtContent"
                        android:width="200dp" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="bottom|center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:id="@+id/btn_add_class"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentLeft="false" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
