<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="수박"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="수박입니다."
        android:textSize="20dp"
        android:layout_below="@+id/txt_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_start_time"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="수박입니다."
        android:textSize="20dp"
        android:layout_below="@+id/txt_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_end_time"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="수박입니다."
        android:textSize="20dp"
        android:layout_below="@+id/txt_content"
        android:layout_toLeftOf="@+id/btn_buy"
        android:layout_toStartOf="@+id/btn_buy" />

    <TextView
        android:id="@+id/txt_place"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="수박입니다."
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/txt_content"
        android:layout_alignBottom="@+id/txt_content"
        android:layout_alignLeft="@+id/txt_end_time"
        android:layout_alignStart="@+id/txt_end_time" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="수박입니다."
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_buy"
        android:layout_toStartOf="@+id/btn_buy" />

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택"
        android:layout_below="@+id/txt_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusable="false" />

</RelativeLayout>
